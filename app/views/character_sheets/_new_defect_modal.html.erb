<div id="new-defect-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-defect-modal-target="modal">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" aria-hidden="true" data-action="click->defect-modal#close"></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="relative z-10 inline-block align-bottom bg-white dark:bg-zinc-900 rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6 border border-gray-200 dark:border-zinc-700">
      <div class="absolute top-0 right-0 pt-4 pr-4">
        <button type="button" class="bg-white dark:bg-zinc-900 rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" data-action="click->defect-modal#close">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100" id="modal-title">
          Add Defect
        </h3>
        <div class="mt-2">
          <%= form_with model: [@character_sheet, CharacterDefect.new], class: "space-y-4" do |f| %>
            <div>
              <%= f.label :name, "Defect Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
              <%= f.text_field :name, class: "mt-1 px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label :rank, "Rank", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
                <%= f.number_field :rank, min: 0, class: "mt-1 px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
              </div>
              <div>
                <%= f.label :bp, "BP (Bonus Points)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
                <%= f.number_field :bp, min: 0, class: "mt-1 px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
              </div>
            </div>

            <div>
              <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
              <%= f.text_area :notes, rows: 3, data: { controller: "markdown-editor" }, class: "mt-1 px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>

            <%= render "adjusters_fields", f: f %>

            <div class="mt-5 sm:mt-6">
              <%= f.submit "Add Defect", class: "inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-zinc-900 dark:text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
