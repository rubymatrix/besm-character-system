<div class="bg-white dark:bg-zinc-900 shadow overflow-hidden sm:rounded-lg border border-gray-200 dark:border-zinc-700">
  <div class="px-4 py-5 sm:px-6 bg-gray-50 dark:bg-zinc-800">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100"><%= weapon_enhancement.name %></h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
          <span class="font-medium">Ranks:</span> <%= weapon_enhancement.ranks %>
        </p>
      </div>
      <div class="ml-4 flex-shrink-0">
        <%= link_to "Edit", edit_weapon_enhancement_path(weapon_enhancement), class: "font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
      </div>
    </div>
  </div>
  <div class="border-t border-gray-200 dark:border-zinc-700 px-4 py-5 sm:px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="md:col-span-3">
        <%= render_besm_description(weapon_enhancement.description) %>
      </div>
    </div>
  </div>
</div>
