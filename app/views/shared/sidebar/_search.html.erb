<div class="px-4 mb-4">
  <%= form_with url: search_besm_references_path, method: :get, class: "relative" do |f| %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg class="w-4 h-4 text-zinc-500 dark:text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <%= f.text_field :q, 
          value: params[:q],
          placeholder: "Search...", 
          class: "block w-full rounded-md border-0 py-1.5 pl-10 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 dark:bg-zinc-900 dark:ring-zinc-700 dark:text-zinc-100 sm:text-sm sm:leading-6" %>
    </div>
  <% end %>
</div>
