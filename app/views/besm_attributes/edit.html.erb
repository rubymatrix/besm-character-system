<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-w-[1080px]">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <nav class="sm:hidden" aria-label="Back">
        <%= link_to "Back", attributes_besm_references_path, class: "flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 dark:hover:text-gray-300" %>
      </nav>
      <nav class="hidden sm:flex mb-2" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <div class="flex">
              <%= link_to "Dashboard", besm_references_path, class: "text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="h-5 w-5 flex-shrink-0 text-gray-300 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
              </svg>
              <%= link_to "Attributes", attributes_besm_references_path, class: "ml-4 text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="h-5 w-5 flex-shrink-0 text-gray-300 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500 dark:text-gray-400" aria-current="page">Edit <%= @besm_attribute.name %></span>
            </div>
          </li>
        </ol>
      </nav>
      <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight">Edit <%= @besm_attribute.name %></h2>
    </div>
  </div>

  <div class="bg-white dark:bg-zinc-900 shadow overflow-hidden sm:rounded-lg border border-gray-200 dark:border-zinc-700">
    <div class="border-t border-gray-200 dark:border-zinc-700 px-4 py-5 sm:px-6">
      <%= form_with(model: @besm_attribute, class: "space-y-6") do |f| %>
        <% if @besm_attribute.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 dark:bg-red-900/50">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400 dark:text-red-300" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">There were errors with your submission</h3>
                <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                  <ul role="list" class="list-disc pl-5 space-y-1">
                    <% @besm_attribute.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-y-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>
          </div>

          <div>
            <%= f.label :attribute_cost, "Cost String", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :attribute_cost, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>
          </div>

          <div>
            <%= f.label :cost_per_level, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.number_field :cost_per_level, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>
          </div>

          <div>
            <%= f.label :relevant_stat, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :relevant_stat, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>
          </div>

          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_area :description, rows: 10, data: { controller: "markdown-editor" }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md dark:bg-zinc-800 dark:border-zinc-700 dark:text-white" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end pt-5">
          <%= link_to "Cancel", attributes_besm_references_path, class: "bg-white dark:bg-zinc-800 py-2 px-4 border border-gray-300 dark:border-zinc-700 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "Save", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
