<div class="bg-white dark:bg-zinc-900 shadow overflow-hidden sm:rounded-lg border border-gray-200 dark:border-zinc-700">
  <div class="px-4 py-5 sm:px-6 bg-gray-50 dark:bg-zinc-800">
    <div class="flex justify-between items-start">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100"><%= besm_attribute.name %></h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
          <span class="font-medium">Cost:</span> <%= besm_attribute.attribute_cost %> | 
          <span class="font-medium">Stat:</span> <%= besm_attribute.relevant_stat %>
        </p>
      </div>
      <div class="ml-4 flex-shrink-0">
        <%= link_to "Edit", edit_besm_attribute_path(besm_attribute), class: "font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
      </div>
    </div>
  </div>
  <div class="border-t border-gray-200 dark:border-zinc-700 px-4 py-5 sm:px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="<%= (besm_attribute.level_effects.present? && besm_attribute.level_effects.is_a?(Array)) ? 'md:col-span-2' : 'md:col-span-3' %>">
        <%= render_besm_description(besm_attribute.description) %>
      </div>
      
      <% if besm_attribute.level_effects.present? && besm_attribute.level_effects.is_a?(Array) %>
        <div>
          <h4 class="text-sm font-medium text-gray-900 dark:text-gray-100 uppercase tracking-wider mb-3">Level Effects</h4>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-300 dark:divide-zinc-700">
              <thead class="bg-gray-50 dark:bg-zinc-800">
                <tr>
                  <th scope="col" class="py-2 pl-4 pr-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Level</th>
                  <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Effect</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 dark:divide-zinc-700 bg-white dark:bg-zinc-900">
                <% besm_attribute.level_effects.each do |effect| %>
                  <tr>
                    <td class="whitespace-nowrap py-2 pl-4 pr-3 text-sm font-medium text-gray-900 dark:text-white"><%= effect['level'] %></td>
                    <td class="px-3 py-2 text-sm text-gray-500 dark:text-white"><%= effect['text'] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
